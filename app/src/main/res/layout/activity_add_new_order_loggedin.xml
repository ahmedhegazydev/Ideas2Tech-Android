<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAddNewOrder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ahmed.convertwebsitetoapp.AddNewOrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/etWhatsNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"


                android:hint="Enter Whats Number">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:padding="10dp"

                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spinnerServiceTpe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etWhatDoUWant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"


                android:hint="Enter What do u want ">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@android:color/darker_gray"

                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/round_rect_shape"
                android:onClick="btnSendMyOrder"
                android:padding="10dp"
                android:text="Send my order"


                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
