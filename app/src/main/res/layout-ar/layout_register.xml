<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_app"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:alpha=".9"
                android:background="@drawable/et_bg"
                android:padding="10dp"


                >

                <EditText
                    android:id="@+id/etNewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="أدخل الاسم بالكامل"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textStyle="bold"


                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha=".9"
                android:background="@drawable/et_bg"
                android:padding="10dp"


                >

                <EditText
                    android:id="@+id/etNewUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="أدخل اليوزر نيم..."
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textStyle="bold"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha=".9"
                android:background="@drawable/et_bg"
                android:padding="10dp"


                >

                <EditText
                    android:id="@+id/etNewPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="أدخل رقم الجوال..."
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textStyle="bold"


                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha=".9"
                android:background="@drawable/et_bg"
                android:padding="10dp"

                >

                <EditText
                    android:id="@+id/etNewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:hint="أدخل البريد الالكتروني..."
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="@android:color/darker_gray"

                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha=".9"
                android:background="@drawable/et_bg"
                android:padding="10dp"

                >

                <EditText
                    android:id="@+id/etNewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:hint="أدخل العنوان..."
                    android:inputType="textPostalAddress"
                    android:padding="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textStyle="bold"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha=".9"
                android:background="@drawable/et_bg"
                android:padding="10dp"

                >

                <EditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:hint="...أدخل كلمة المرور"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textStyle="bold"

                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha=".9"
                android:background="@drawable/et_bg"
                android:padding="10dp"

                >

                <EditText
                    android:id="@+id/etNewConfPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:hint="...أعد كتابة كلمة المرور السابقه"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBlue6"
                android:onClick="Register"
                android:padding="10dp"
                android:text="إنشاء حساب جديد"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>